@*
  Minimal shared layout for all pages (site + Identity)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - ScottMo.dev</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar">
        <a class="navbar-brand" asp-page="/Index">ScottMo.dev</a>
        <ul class="nav">
            <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/api/hello">API</a></li>
        </ul>
        @await Html.PartialAsync("_LoginPartial")
    </nav>
</header>

<main class="container">
    @RenderBody()
</main>

<footer class="footer">
    <small>&copy; @DateTime.UtcNow.Year ScottMo.dev</small>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>