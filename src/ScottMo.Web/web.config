<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified"/>
    </handlers>
    <aspNetCore processPath=".\ScottMo.Web.exe" arguments="" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        <!-- Provide connection string via env var to avoid storing secrets -->
        <!-- Example: Default__ConnectionString -->
      </environmentVariables>
    </aspNetCore>
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>
